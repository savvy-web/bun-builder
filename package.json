{
	"name": "@savvy-web/bun-builder",
	"version": "0.1.0",
	"private": true,
	"description": "Bun-based build system for Node.js libraries with automatic package.json transformation, TypeScript declaration bundling, and multi-target support",
	"keywords": [
		"bun",
		"bundler",
		"build",
		"typescript",
		"esm",
		"library",
		"dts",
		"declarations",
		"api-extractor",
		"tsgo"
	],
	"homepage": "https://github.com/savvy-web/bun-builder",
	"bugs": {
		"url": "https://github.com/savvy-web/bun-builder/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/savvy-web/bun-builder.git"
	},
	"license": "MIT",
	"author": {
		"name": "C. Spencer Beggs",
		"email": "spencer@savvyweb.systems",
		"url": "https://savvyweb.systems"
	},
	"type": "module",
	"exports": {
		".": "./src/index.ts",
		"./tsconfig/root.json": "./src/public/tsconfig/root.json",
		"./tsconfig/ecma/lib.json": "./src/public/tsconfig/ecma/lib.json"
	},
	"scripts": {
		"build": "turbo run build:dev build:npm",
		"build:dev": "bun run ./bun.config.ts --env-mode dev",
		"build:npm": "bun run ./bun.config.ts --env-mode npm",
		"ci:build": "CI=\"true\" turbo run build:dev build:npm",
		"ci:test": "NODE_ENV=test bun test --coverage",
		"ci:version": "changeset version && biome format --write",
		"lint": "biome check --max-diagnostics=none",
		"lint:fix": "biome check --write --max-diagnostics=none",
		"lint:fix:unsafe": "biome check --write --unsafe --max-diagnostics=none",
		"lint:md": "markdownlint-cli2 '**/*.{md,mdx}' --config './lib/configs/.markdownlint-cli2.jsonc'",
		"lint:md:fix": "markdownlint-cli2  --config './lib/configs/.markdownlint-cli2.jsonc' --fix",
		"lint:tsdoc": "eslint --config ./lib/configs/eslint.config.ts --ignore-pattern '**/*.test.ts'",
		"prepare": "husky",
		"test": "NODE_ENV=test bun test",
		"test:coverage": "NODE_ENV=test bun test --coverage",
		"test:watch": "NODE_ENV=test bun test --watch",
		"typecheck": "tsgo --noEmit"
	},
	"dependencies": {
		"@microsoft/tsdoc": "^0.16.0",
		"@microsoft/tsdoc-config": "^0.18.0",
		"@typescript-eslint/parser": "^8.53.1",
		"eslint": "^9.39.2",
		"eslint-plugin-tsdoc": "^0.5.0",
		"glob": "^13.0.0",
		"picocolors": "^1.1.1",
		"sort-package-json": "^3.6.1",
		"tmp": "^0.2.5",
		"type-fest": "^5.4.1"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@microsoft/api-extractor": "^7.55.2",
		"@savvy-web/lint-staged": "^0.1.1",
		"@types/bun": "^1.3.6",
		"@types/tmp": "^0.2.6",
		"@typescript/native-preview": "^7.0.0-dev.20260124.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"markdownlint-cli2": "^0.20.0",
		"markdownlint-cli2-formatter-codequality": "^0.0.7",
		"turbo": "^2.7.6",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"@microsoft/api-extractor": "^7.55.2",
		"@types/bun": "^1.3.6",
		"@typescript/native-preview": "^7.0.0-dev.20260124.1",
		"typescript": "^5.9.3"
	},
	"peerDependenciesMeta": {
		"@microsoft/api-extractor": {
			"optional": false
		},
		"@types/bun": {
			"optional": false
		},
		"@typescript/native-preview": {
			"optional": false
		},
		"typescript": {
			"optional": true
		}
	},
	"packageManager": "bun@1.3.6",
	"engines": {
		"bun": ">=1.3.6"
	},
	"devEngines": {
		"packageManager": {
			"name": "bun",
			"version": "1.3.6",
			"onFail": "ignore"
		},
		"runtime": [
			{
				"name": "bun",
				"version": "1.3.6",
				"onFail": "ignore"
			}
		]
	},
	"publishConfig": {
		"access": "public",
		"targets": [
			{
				"protocol": "npm",
				"registry": "https://npm.pkg.github.com/",
				"directory": "dist/npm",
				"access": "public",
				"provenance": true
			},
			{
				"protocol": "npm",
				"registry": "https://registry.npmjs.org/",
				"directory": "dist/npm",
				"access": "public",
				"provenance": true
			}
		]
	}
}
