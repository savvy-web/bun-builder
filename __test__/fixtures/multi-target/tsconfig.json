{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"module": "Preserve",
		"moduleResolution": "bundler",
		"noEmit": true,
		"outDir": "dist",
		"rootDir": ".",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"verbatimModuleSyntax": true
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src/**/*.ts"]
}
